@import '/templates/loading/loading.wxss';

.detail-wrapper {
  border-top: 2px solid #3CA5E4;
  position: relative;
  margin-top: 120rpx;
  width: 100%;
}

.navigation-bar-wrapper {
  position: fixed;
  top: 0;
  height: 80rpx;
  z-index: 999;
  width: 100%;
}

.navigation-bar {
  width: 100%;
  display: flex;
  background-color: #fff;
  padding: 60rpx 20rpx;
}

.navigate-tips {
  font-size: 30rpx;
  line-height: 45rpx;
  align-self: center;
}

.navigate-image {
  width: 45rpx;
  height: 45rpx;
  vertical-align: top;
  align-self: center;
}

.detail-title {
  font-size: 40rpx;
  line-height: 60rpx;
  font-weight: bold;
  padding: 30rpx 30rpx 15rpx 30rpx;
}

.detail-extra {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 36rpx;
  color: rgba(0, 0, 0, 0.4);
  padding: 0 30rpx;
}

.detail-source {
  padding-right: 20rpx;
}

.detail-content {
  font-size: 30rpx;
  line-height: 45rpx;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.content-image {
  width: 100%;
  padding: 30rpx 0;
  border-radius: 10rpx;
}

.content-strong {
  font-weight: bold;
}
