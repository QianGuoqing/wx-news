@import '/templates/bulletin/bulletin.wxss';
@import '/templates/news-item/news-item.wxss';

page {
  width: 100%;
  height: 100%;
}

scroll-view {
  height: 100%;
  width: 100%;
}

.tab-list-wrapper {
  position: fixed;
  width: 100%;
  height: 50rpx;
  left: 0;
  top: 0;
  z-index: 999;
}

.tab-list {
  display: flex;
  text-align: center;
  background-color: #3CA5E4;
  color: #fff;
}

.tab-item {
  position: relative;
  box-sizing: border-box;
  flex-shrink: 0;
  width: 100rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  padding: 20rpx 0;
}

.active {
  font-weight: bold;
  background-color: #fff;
  color: rgba(0, 0, 0, 0.8);
  border-radius: 5rpx 5rpx 0 0;
  border-bottom: 1px solid #3CA5E4;
}

.swiper-wrapper {
  height: 100%;
  margin-top: 85rpx;
}


.loading {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: loadingAnimation infinite 1s;
}

@keyframes loadingAnimation {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
